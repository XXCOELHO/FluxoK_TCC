<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:paddingTop="5dp"
        android:paddingBottom="11dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/fluxok" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#748AA7"
        android:text="briefing"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="125dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text="Projeto:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_projeto"
            android:layout_width="320dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="105dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text="Cliente:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_cliente"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="105dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text=" Ref.:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_ref_cliente"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout04"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="105dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text="Tipo:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_tipo"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="105dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text=" Volume:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_volume"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout05"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="105dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text="Numero:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_numero"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="105dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text=" Início:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_inicio"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout06"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="105dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text="Mix:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_mix"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="105dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text=" Entrega:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_entrega"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />
    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="360dp"
        android:paddingTop="10dp"
        android:layout_height="130dp"
        android:stretchColumns="0,  "
        android:gravity="center"
        android:layout_marginLeft="25dp">

        <TableRow
            android:background="#000000"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" Observações  . . . "
                android:layout_margin="1dp"
                android:layout_column="0"
                android:background="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:layout_margin="1dp"
                android:layout_column="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/LinearLayout10"
        android:paddingTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/LimparButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Limpar" />

        <Button
            android:id="@+id/SalvarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Sair" />
    </LinearLayout>
</LinearLayout>