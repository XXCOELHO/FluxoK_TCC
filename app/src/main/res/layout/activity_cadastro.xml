<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/fluxok" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#748AA7"
        android:text="CADASTRO"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFF"
        android:textSize="23dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="125dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:text="Nome:"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caixa_nome"
            android:layout_width="320dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/textSenha"
            android:textAlignment="viewStart"
            android:layout_width="125dp"
            android:layout_weight="2"
            android:paddingTop="05dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Senha:" />

        <EditText
            android:id="@+id/caixa_senha"
            android:layout_width="320dp"
            android:layout_weight="1"
            android:paddingTop="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/textRegistro"
            android:textAlignment="viewStart"
            android:paddingTop="05dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="125dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Registro:" />

        <EditText
            android:id="@+id/caixa_registro"
            android:layout_width="320dp"
            android:layout_weight="1"
            android:paddingTop="05dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout04"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/textCargo"
            android:textAlignment="viewStart"
            android:paddingTop="05dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="125dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Cargo:" />



        <EditText
            android:id="@+id/caixa_cargo"
            android:layout_width="320dp"
            android:layout_weight="1"
            android:paddingTop="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout05"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/textGestor"
            android:textAlignment="viewStart"
            android:paddingTop="05dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="125dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Gestor:" />

        <EditText
            android:id="@+id/caixa_gestor"
            android:layout_width="320dp"
            android:layout_weight="1"
            android:paddingTop="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ImageView>

        <Button
            android:id="@+id/buttonLoadPicture"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:onClick="loadImagefromGallery"
            android:text="Carregar imagem" >
        </Button>

        <LinearLayout
            android:id="@+id/LinearLayout10"
            android:paddingBottom="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/VoltarButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Voltar" />


            <Button
                android:id="@+id/SalvarButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Salvar" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>