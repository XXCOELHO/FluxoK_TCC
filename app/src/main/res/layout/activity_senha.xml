<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:paddingTop="30dp"
        android:paddingBottom="27dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/fluxok" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#748AA7"
        android:text="SENHA"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:paddingTop="40dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio" />

    <EditText
        android:id="@+id/caixa_user"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="350dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova Senha" />

    <EditText

        android:id="@+id/caixa_senha"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="350dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repetir Senha" />

    <EditText
        android:id="@+id/caixa_senha2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="350dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:paddingTop="0dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Utilize uma senha de 8 caracteres" />


    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:paddingTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/ConfirmarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Confirmar" />


        <Button
            android:id="@+id/CancelarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>